import java.util.ArrayList;

public class SimplePlayer implements Player{
	ArrayList<Integer> cards = new ArrayList<>();
	ArrayList<Integer> dd = new ArrayList<>();
	int playerIndex;
	int chips;
	int bet = 10;
	public String choice;
	
	public SimplePlayer(int chips, int playerIndex){
		this.chips = chips;
		this.playerIndex = playerIndex;
	}
	
	public String choice(){
		return choice;
	}
	
	public void printHand(){
		System.out.print("Player " + Integer.toString(playerIndex) + ": ");
		for(Integer i : cards)
			System.out.print(Integer.toString(i) + ", ");
		System.out.print("Total: " + Integer.toString(sumCards()));
	}
	
	public void newRound(){
		cards.clear();
		dd.clear();
	}
	
	public void addCard(int card){
		cards.add(card);
	}
	
	public void changeChips(int chips){
		this.chips += chips;
	}
	
	public int sumCards(){
		int sum = 0;
		for(Integer i : cards)
			sum += i;
		return sum;
	}
	
	public String play(int deal){
		int sum = sumCards();
		
		if (sum > 21)
			choice = "Bust";
		
		if(sum >= 17)
			choice = "Stay";
		
		if(sum <= 16 && sum >= 13){
			if(deal < 7)
				choice = "Hit";
			choice = "Stay";
		}
		
		if(sum == 12){
			if(deal >= 4 && deal <= 6)
				choice = "Stay";
			choice = "Hit";
		}
		
		if(sum == 11 || sum == 10 && cards.size() == 2){
			if(deal == 10 && sum == 10)
				choice = "Hit";
			if(cards.get(0) == cards.get(1)){
				dd.add(cards.get(1));
				choice = "Hit";
				//return "Double Down";
			}
			choice = "Hit";
		}
		
		if(sum == 9 && (deal >= 3 && deal <= 6)){
			choice = "Hit";
			//return "Double Down";
		}
		
		choice = "Hit";
		return choice;
	}
	
	
}
